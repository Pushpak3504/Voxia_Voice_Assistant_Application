<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/login"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="@dimen/_20ssp"
        android:layout_marginTop="@dimen/_140sdp"
        android:layout_gravity="center"
        android:fontFamily="@font/spacebold"
        android:textColor="@color/DarkBlue"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Email"
        android:layout_marginLeft="@dimen/_30ssp"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/spacemid"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/DarkBlue"
        />

    <EditText
        android:id="@+id/logmail"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:textColor="@color/DarkBlue"
        android:layout_height="42dp"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/customshape"
        android:hint="Enter Email"
        android:fontFamily="@font/spaceregular"
        android:textColorHint="@color/DarkBlue"
        android:paddingLeft="@dimen/_10sdp"
        android:inputType="text"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Password"
        android:layout_marginLeft="@dimen/_30ssp"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/spacemid"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/DarkBlue"
        />

    <EditText
        android:id="@+id/logpass"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/customshape"
        android:hint="Enter Password"
        android:textColor="@color/DarkBlue"
        android:fontFamily="@font/spaceregular"
        android:textColorHint="@color/DarkBlue"
        android:paddingLeft="@dimen/_10sdp"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/forgottxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_170sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/spacemid"
        android:text="Forgot Password?"
        android:textColor="@color/DarkBlue"
        android:textSize="@dimen/_12ssp"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:fontFamily="@font/spacebold"
        android:backgroundTint="@color/DarkBlue"
        android:id="@+id/btnlogin"
        />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spacemid"
            android:text="Don't have an account?"
            android:textColor="@color/MidBlue"
            android:textSize="@dimen/_10ssp"
            />

        <TextView
            android:id="@+id/signupnow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_120sdp"
            android:fontFamily="@font/spacemid"
            android:text="Sign Up now"
            android:textColor="@color/DarkBlue"
            android:textSize="@dimen/_10ssp"
            />

    </FrameLayout>


</LinearLayout>